generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  
  // Role & Subscription
  role          String    @default("CLIENT") // "CLIENT", "EXPERT", "ADMIN"
  subscription  Subscription?
  
  // Biometrics (Production Data)
  height        Float?    // cm
  currentWeight Float?    // kg
  targetWeight  Float?    // kg
  gender        String?   // "M", "F", "O"
  dob           DateTime?
  activityLevel String?   // "SEDENTARY", "LIGHT", "MODERATE", "ACTIVE", "ATHLETE"
  dietaryPref   String?   // "NONE", "VEGAN", "KETO", etc.
  goal          String?   // "LOSS", "MAINTENANCE", "RECOMPOSITION"
  
  // Medical & Constraints
  medicalNotes  String?
  
  // Expert Assignment
  expertId      String?
  expert        User?     @relation("ExpertToClients", fields: [expertId], references: [id])
  clients       User[]    @relation("ExpertToClients")

  // Legacy Scores (kept for backwards compat) but deprioritized
  glowScore Int      @default(0) 
  streak    Int      @default(0)
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  logs          DailyLog[]
  mealLogs      MealLog[]
  workoutLogs   WorkoutLog[]
  consultations ConsultationSession[]
  
  // Consultation
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  assignedPlanId String?
  assignedPlan  NutritionPlan? @relation(fields: [assignedPlanId], references: [id])
}

model NutritionPlan {
  id          String   @id @default(cuid())
  name        String
  description String
  targetGoal  String   // "LOSS", "MAINTENANCE", "Bulk"
  features    String   // JSON string of features
  isPublic    Boolean  @default(false)
  
  users       User[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Subscription {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id])
  stripeCustomerId String?
  stripePriceId    String?
  status           String   // "active", "canceled", "incomplete"
  currentPeriodEnd DateTime?
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Exercise {
  id          String   @id @default(cuid())
  name        String
  description String?
  videoUrl    String?  // YouTube/Licensed embed
  category    String   // "Strength", "Yoga", "Cardio", "Flexibility"
  difficulty  String   // "Beginner", "Intermediate", "Advanced"
  targetMuscle String?
  duration    Int?     // Suggested minutes
  workouts    WorkoutExercise[]
}

model Workout {
  id          String   @id @default(cuid())
  name        String
  description String?
  goal        String   // "Fat Loss", "Maintenance", "Recovery"
  location    String   // "Home", "Gym"
  duration    Int      // Total estimated minutes
  exercises   WorkoutExercise[]
  logs        WorkoutLog[]
}

model WorkoutExercise {
  id          String   @id @default(cuid())
  workoutId   String
  workout     Workout  @relation(fields: [workoutId], references: [id])
  exerciseId  String
  exercise    Exercise @relation(fields: [exerciseId], references: [id])
  order       Int
  sets        Int?
  reps        String?
}

model MealLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  date        DateTime @default(now())
  mealType    String   // "Breakfast", "Lunch", "Dinner", "Snack"
  photoUrl    String?
  calories    Int
  protein     Int
  carbs       Int
  fat         Int
  fiber       Int?
  description String?
}

model WorkoutLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  workoutId   String
  workout     Workout  @relation(fields: [workoutId], references: [id])
  date        DateTime @default(now())
  difficulty  Int      // 1-5 User rating
  feedback    String?
}

model ConsultationSession {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  date        DateTime
  status      String   // "scheduled", "completed", "canceled"
  meetingLink String?  // Zoom/Google Meet
  notes       String?
}

model DailyLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime @default(now())
  
  // Ring Scores (Legacy abstraction)
  moveScore Int      @default(0)
  glowScore Int      @default(0) 
  mindScore Int      @default(0)
  
  // Precise Metrics
  weight    Float?   // Daily weigh-in
  water     Int?     // ml
  sleep     Float?   // Hours
  steps     Int?
  
  adherenceScore Float?  // Expert-facing metric

  // Habits tracking
  completedHabits String @default("[]")
}

model Message {
  id          String   @id @default(cuid())
  content     String?
  mediaUrl    String?  // Voice note or image
  mediaType   String?  // "IMAGE", "VOICE"
  createdAt   DateTime @default(now())
  
  senderId    String
  sender      User     @relation("SentMessages", fields: [senderId], references: [id])
  
  receiverId  String
  receiver    User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  
  isRead      Boolean  @default(false)
}
